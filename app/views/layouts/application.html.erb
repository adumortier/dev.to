<%= render "shell/top" %>
<style>.app-shell-loader {display: none;}</style>
<div id="page-content" class="universal-page-content-wrapper <%= view_class %>" data-current-page="<%= current_page %>">
  <% if flash[:global_notice] %>
    <div class="global-notice">
      <%= flash[:global_notice] %>
    </div>
  <% end %>
  <%# the div below appears to be the div encompassing the entire page contents %>
  <div id="page-content-inner">
    <% if @hero_html %>
      <%= @hero_html.html_safe %>
    <% end %>
    <%= yield %>
  </div>
</div>
<%= render "shell/bottom" %>
