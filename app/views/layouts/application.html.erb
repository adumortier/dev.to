<%= render "shell/top" %>
<style>.app-shell-loader {display: none;}</style>
<div id="page-content" class="universal-page-content-wrapper <%= view_class %>" data-current-page="<%= current_page %>">
  <% if flash[:global_notice] %>
    <div class="global-notice">
      <%= flash[:global_notice] %>
    </div>
  <% end %>
  <div id="page-content-inner">
  <% #This part of the code is responsible for page layout of the user's profile page minus the header and footer. It is bringing in the different views (components) that make up the profile page. %>
    <% if @hero_html %>
      <%= @hero_html.html_safe %>
    <% end %>
    <%= yield %>
  </div>
</div>
<%= render "shell/bottom" %>
